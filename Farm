-- Função Sold
function Sold()
    while true do
        wait(5) -- Espera por 5 segundos
        -- Adicione aqui o código que deseja executar a cada 5 segundos
        print("Sold function executada a cada 5 segundos")
    end
end

-- Função Stone
function Stone()
    while true do
        -- Adicione aqui o código que deseja executar rapidamente em um loop
        print("Stone function em loop rápido")
        wait(0) 
    end
end

-- Função EmeraldPice3
function EmeraldPice3()
    while true do
        -- Adicione aqui o código que deseja executar rapidamente em um loop
        print("EmeraldPice3 function em loop rápido")
        wait(0) -- Aguarda imediatamente, o mais rápido possível
    end
end

-- Iniciar as funções em threads separadas
spawn(Sold)
spawn(Stone)
spawn(EmeraldPice3)
